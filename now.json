{
  "version": 2,
  "name": "portfolio",
  "builds": [
    { "src": "next.config.js", "use": "@now/next" },
    { "src": "api/feed.ts", "use": "@now/node" }
  ],
  "build": {
    "env": {
      "CTF_ACCESSTOKEN": "@contentful-delivery"
    }
  },
  "regions": ["hnd1"],
  "alias": ["honai.me"],
  "routes": [
    {
      "src": "/blog/post/(?<slug>[\\S]+)$",
      "dest": "/blog/post?slug=$slug"
    },
    {
      "src": "/feed",
      "dest": "/api/feed.ts"
    },
    {
      "src": "/post/(?<slug>[\\S]+)",
      "status": 301,
      "headers": { "Location": "https://honai.me/blog/post/$slug" }
    }
  ]
}
